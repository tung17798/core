<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="44dp">

    <TextView
        android:id="@+id/tv_spelling_code"
        style="?attr/textBody1"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/padding"
        android:gravity="center"
        android:minHeight="40dp"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />

    <com.one.word.ui.view.AudioPlayView
        android:id="@+id/iv_spelling"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_spelling_code"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_spelling"
        style="?attr/textBody1"
        android:layout_width="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:minHeight="40dp"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_spelling"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />

</androidx.constraintlayout.widget.ConstraintLayout>